GET         /                        controllers.Assets.at(path="/public", file="index.html")
GET         /assets/*file            controllers.Assets.at(path="/public", file)

POST        /api/login               controllers.LoginController.login()

GET         /api/users/:id           controllers.UserController.getById(id: Long)
POST        /api/users/search        controllers.UserController.search()

GET         /api/roles               controllers.RoleController.getAll()

